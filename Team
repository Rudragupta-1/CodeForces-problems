import java.util.*;
public class Main
{
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
    int t=sc.nextInt();
    int c1=0;
    while(t-->0){
     int a=sc.nextInt();
     int b=sc.nextInt();
     int c=sc.nextInt();
     if(a+b+c>=2)
     {
         c1++;
     }
    }
    System.out.println(c1);
	}
}
