import java.util.*;
public class Main
{
	public static void main(String[] args) {
	   Scanner sc=new Scanner(System.in);
	   int a=sc.nextInt();
	   int b=sc.nextInt();
	   int arr[]=new int[a];
	   for(int i=0;i<a;i++)
	   {
	       arr[i]=sc.nextInt();
	   }
	   int check=arr[b-1];
	   int res=0;
	   for(int k=0;k<a;k++)
	   {
	       if(arr[k]>0 && arr[k]>=check)
	       {
	           res++;
	       }
	   }
	   System.out.println(res);
	}
}
